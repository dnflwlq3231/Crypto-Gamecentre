    <header>
        <div class="omdoll_content_wrapper">
            <div id="rockgame_module_view">
                <!-- 위쪽 -->

                <h2 style="text-align: center">가위. 바위. 보 게임</h2>
                <div class="xecenter_div_line"></div>
                <form id="insert_form" name="insert_form" action="https://m16.me/" method="post"
                    onsubmit="return rockgame_submit_check()" onkeydown="if(event.keyCode==13){return false;}"><input
                        type="hidden" name="error_return_url" value="/rockgame"><input type="hidden" name="mid"
                        value="rockgame"><input type="hidden" name="vid" value=""><input type="hidden" name="ruleset"
                        value="insert_game">
                    <input type="hidden" name="act" value="procRockgameUserView">
                    <input type="hidden" name="game_srl" value="">
                </form>
            </div>
        </div>
    </header>
    <!-- 가운데 -->
    <section>
        <div class="rockgame_center">
            <p class="row">
                <div class="game_result">
                    <div class="name" id="com_name">
                        COM
                    </div>
                    <div class="name" id="player_name">
                        PLAYER
                    </div>
                </div>
                <div>
                    <div class="result shadow-sm p-3 bg-white rounded" id="com_result"></div>
                    <div class="result" id="versus"> <img src="/img/portfolio/versus.png"></div>
                    <div class="result shadow-sm p-3 bg-white rounded" id="player_result"></div>
                </div>
            </p>
            <div class="game_select">
                <input type="hidden" name="rsp_select" value="">
                <div class="rps_box">
                    <input class="rps_img" type="image" id="rps_rock" src="/img/rps/palm.png" width="240" height="240"
                        onclick="this.form.rsp_slect.value=&#39;rock&#39;">
                </div>
                <div class="rps_box">
                    <input class="rps_img" type="image" id="rps_scissors" src="/img/rps/scissors.png" width="240" height="240"
                        onclick="this.form.rsp_slect.value=&#39;scissors&#39;">
                </div>
                <div class="rps_box">
                    <input class="rps_img" type="image" id="rps_paper" src="/img/rps/rock.png" width="240" height="240"
                        onclick="this.form.rsp_slect.value=&#39;paper&#39;">
                </div>
            </div>
        </div>
    </section>
    <!-- 아래쪽 -->
    <footer class="rounded-bottom">
        <p class="row">
            <p class="right_bar">
                <div class="rockgame_set">
                    <span class="fas fa-coins" style="color: #eee"> : <input type="text" class="xecenter_form_box" style="width:50px; background:#eee;"
                            value="152" disabled="disabled"> </span>
                    <span>참가point : <input type="text" class="xecenter_form_box" style="width:35px;" id="game_point"
                            name="game_point" value=""></span>
                    <span>잔여횟수 : <input type="text" class="xecenter_form_box" style="width:23px; background:#eee;"
                            value="10" disabled="disabled"></span>
                    <span>오늘결과 : <input type="text" class="xecenter_form_box" style="width:45px; background:#eee;"
                            disabled="disabled"></span>
                </div>                      
            </p>
        </p>
    </footer>

    <script type="text/javascript">
        //폼을 중복전송 방지위해 전송후 가위바위보 버튼을 막음 // 엔터로 전송못하게 함
        function rockgame_submit_check() {

            if (document.insert_form.game_point.value == '') {
                alert('참가point를 입력하세요');
                return false;
            } else {
                document.getElementById('rps_rock').disabled = true;
                document.getElementById('rps_paper').disabled = true;
                document.getElementById('rps_scissors').disabled = true;
                return true;
            }
        }
        jQuery(function ($) {
            $('#game_point').focus(); //포인트 입력창에 포커스주기
        });
    </script>

